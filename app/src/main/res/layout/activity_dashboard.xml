<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    tools:context=".Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang,"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="viewEnd"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Natanael Ruswandi."
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textAlignment="viewEnd"
                    android:paddingBottom="10dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Selamat Datang Kembali, Selamat Belajar!"
                android:textSize="28sp"
                android:paddingBottom="35dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="25dp"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="100dp"
                        android:layout_height="121dp"
                        app:srcCompat="@drawable/learn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Modul"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="25dp"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="121dp"
                        app:srcCompat="@drawable/project" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="2 Project"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingTop="30dp"
                android:text="Kelas Khusus"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_btn2"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="Bahasa Pemrograman 3 | TI FKOM TINFC-2022-03"
                    android:textAlignment="viewStart"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/photoshop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HITUNG GAJI"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/primary"
                android:onClick="openGaji"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/primary"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="MODUL 5 PRAKTIKUM"
                android:layout_marginTop="15dp"
                android:onClick="openModul5"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/primary"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="MODUL 6 PRAKTIKUM"
                android:layout_marginTop="15dp"
                android:onClick="openModul6"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/primary"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="MODUL 7 PRAKTIKUM"
                android:layout_marginTop="15dp"
                android:onClick="openModul7"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/primary"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="APLIKASI KELULUSAN"
                android:layout_marginTop="15dp"
                android:onClick="openModul"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/primary"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="MODUL 8 PRAKTIKUM"
                android:layout_marginTop="15dp"
                android:onClick="openModul8"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/primary"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="MODUL 9 PRAKTIKUM"
                android:layout_marginTop="15dp"
                android:onClick="openModul9"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/primary"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="MODUL 9 RECYCLE VIEW"
                android:layout_marginTop="15dp"
                android:onClick="openModul9RecycleView"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
